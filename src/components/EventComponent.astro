---
interface Props {
  startTime: string;
  endTime: string;
  date: string;
  title: string;
  description: string;
}

const { title, description, startTime, endTime, date } = Astro.props;

const fullDate = date.toLocaleDateString("es", {
  weekday: "long",
});

const startTimeFormated = startTime.toLocaleTimeString("es", {
  hour: "2-digit",
  minute: "2-digit",
});

const endTimeFormated = endTime.toLocaleTimeString("es", {
  hour: "2-digit",
  minute: "2-digit",
});

const actualTime = new Date();
const onDirect = "En directo";

const isLive = () => {
  const currentDate = new Date().toLocaleDateString("es", {
    weekday: "long",
  });

  if (
    currentDate === fullDate &&
    actualTime >= startTime &&
    actualTime <= endTime
  ) {
    return onDirect;
  } else {
    return "";
  }
};
---

<li class="dark:bg-midu-600 bg-midu-100 px-6 py-4 rounded-lg min-w-[42rem] max-w-2xl">
  <time class="text-xs font-bold capitalize dark:text-midu-50"
    >{fullDate} - {startTimeFormated} - {endTimeFormated}</time
  >
  <span class="">{isLive}</span>
  <h3
    class="text-lg font-extrabold dark:text-midu-50 [text-wrap:balance] leading-snug"
  >
    {title}
  </h3>
  <p class="text-sm dark:text-midu-50/60 text-midu-800/60 [text-wrap:balance] pt-2">{description}</p>
</li>
