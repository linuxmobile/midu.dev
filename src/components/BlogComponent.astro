---
import { Icon } from "astro-icon";

interface Props {
  title: string;
  date: string;
  tags: string;
  url: string;
  readTime: string;
}

const { title, date, tags, url, readTime } = Astro.props;

const fullDate = date.toLocaleDateString("es", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<li class="flex items-center justify-start max-w-xl">
  <a href={url} class="flex items-center justify-center gap-4">
    <Icon name={tags} class="w-14 h-14 rounded-full" />
    <div class="flex flex-col items-start justify-between gap-1 max-w-md">
      <h2 class="text-lg font-extrabold leading-snug">{title}</h2>
      <div class="flex items-center gap-x-1">
        <p class="text-xs font-medium dark:text-midu-50/60 text-midu-800/60">{fullDate}</p>
        <p class="text-xs font-medium dark:text-midu-50/80 text-midu-800/80">- {readTime}</p>
      </div>
    </div>
  </a>
</li>
