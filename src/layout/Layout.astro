---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
  description: string;
  ogImage?: {
    src: string;
    alt: string;
  };
}

const {
  title,
  description,
  ogImage = {
    src: "https://midu.dev/og-image.png",
    alt: "Midudev",
  },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head {title} {description} {ogImage} />
  <body class="dark:bg-midu-700 bg-midu-200 dark:text-midu-50 text-midu-800 font-midufont transition-colors duration-200">
    <div class="2xl:max-w-8xl mx-auto">
      <Header />
      <slot />
    </div>
    <Footer />
  </body>
</html>
